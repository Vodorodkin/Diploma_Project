@model Diploma_Project.Web_app.ViewModels.Home.IndexViewModel


<main>

    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
                <img class="bd-placeholder-img" src="~/images/banner4@2x.2f589477.jpg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><img/>

                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>Работаем для вас с 1933 года!</h1>
                        <p>ООО «Зарайский хлебокомбинат» — одно из старейших предприятий городского округа Зарайск, в 2018 году отметившее 85-летие.</p>
                        <p><a class="btn btn-light" asp-controller="Contacts" asp-action="Index">Узнать подробнее</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="bd-placeholder-img" src="~/images/banner4@2x.2f589477.jpg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><img/>

                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>Работаем для вас с 1933 года!</h1>
                        <p>ООО «Зарайский хлебокомбинат» — одно из старейших предприятий городского округа Зарайск, в 2018 году отметившее 85-летие.</p>
                        <p><a class="btn btn-light" asp-controller="Contacts" asp-action="Index">Узнать подробнее</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="bd-placeholder-img" src="~/images/banner@2x.49cc1f84.png" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><img />

                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>Работаем для вас с 1933 года!</h1>
                        <p>ООО «Зарайский хлебокомбинат» — одно из старейших предприятий городского округа Зарайск, в 2018 году отметившее 85-летие.</p>
                        <p><a class="btn btn-light" asp-controller="Contacts" asp-action="Index">Узнать подробнее</a></p>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading text-dark">
                    5,5 тонн продукции ежедневно
                </h2>
                <p class="lead text-dark">
                    С каждым годом спрос на нашу продукцию стабильно растет. Ассортимент хлебобулочной продукции за последние 3 года вырос со 112 до 176 наименований.
                </p>
            </div>
            <div class="col-md-5">
                <img class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="500" height="500" src="~/images/banner@2x.49cc1f84.png" role="img" aria-label="Placeholder: 500x500" preserveAspectRatio="xMidYMid slice" focusable="false">

            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading text-dark">
                    Индивидуальная технология производства
                </h2>
                <p class="lead text-dark">
                    На сегодняшний день наше предприятие единственное в Московской области, сохранившее классические, традиционные технологии производства хлеба, выпечка которого производится в настоящих каменных печах.
                </p>
            </div>
            <div class="col-md-5 order-md-1">
                <img class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="500" height="500" src="~/images/banner4@2x.2f589477.jpg" role="img" aria-label="Placeholder: 500x500" preserveAspectRatio="xMidYMid slice" focusable="false">

            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading text-dark">
                    Большой выбор мучной продукции
                </h2>
                <p class="lead text-dark">
                    Выпускаемая продукция разнообразна: хлеб ржано-пшеничный, изготавляемый на молочно-кислых густых заквасках, хлеб пшеничный по опарной технологии, хлеб деревенский, фруктово-постный, хлеб из гречихи, многозерновой хлеб, бездрожжевой, а также сдобные мучные кондитерские изделия.
                </p>
            </div>
            <div class="col-md-5">
                <img class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="500" height="500" src="~/images/banner2@2x.dc24a742.png" role="img" aria-label="Placeholder: 500x500" preserveAspectRatio="xMidYMid slice" focusable="false">

            </div>
        </div>

        <hr class="featurette-divider">

        <!-- /END THE FEATURETTES -->

    </div><!-- /.container -->
</main>


