@model Diploma_Project.Web_app.ViewModels.ShopCart.IndexViewModel

<h3>Ваша корзина</h3>


<form class="mx-auto" method="post">
    <h6>Выберите магазин:</h6>
    <select name="storeId" asp-items="Model.Stores" class="form-control m-2 w-25"></select>
    <table class="table">
        @foreach (var a in Model.ShopCartProducts)
        {
            int i = 0;
            i++;
            <tr class="content ">
                <td>
                    @a.Product.Name
                </td>
                <td>@a.Product.Price  руб.</td>
                <td>
                    <input name="shopCarts[@i].Amount" placeholder="Поиск по заказам" value="@a.Amount" class="form-control m-1 w-25" />
                </td>
                <td>
                    <a class="btn btn-light m2">Убрать</a>
                </td>
            </tr>
        }
    </table>
    <div class="form-inline">

        <button class=" btn btn-lg btn-warning m-2 align-middle" type="submit">Оформить заказ</button>

    </div>
    <div class="d-flex align-items-center m-2">
    </div>
</form>

