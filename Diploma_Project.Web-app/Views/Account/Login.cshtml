@model Diploma_Project.Web_app.ViewModels.Account.LoginModel

<main class=" w-100 d-flex align-items-center text-center mx-auto">
    <form class="mx-auto text-center" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <h1 class="h3 mb-3 fw-normal">Вход</h1>
        <div class="form-floating m-2">
            <span asp-validation-for="Email"></span>
            <input asp-for="Email" type="email" class="form-control " id="floatingInput" placeholder="hleb@zar.ru">
            <label for="floatingInput">Email</label>
        </div>
        <div class="form-floating m-2">
            <span asp-validation-for="Password"></span>
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Пароль">
            <label for="floatingPassword">Пароль</label>
        </div>
        <div class="d-flex align-items-center m-2">
            <button class=" btn btn-lg btn-warning m-2" type="submit">Войти</button>
            <button asp-action="Register" asp-controller="Account" class=" btn btn-lg btn-outline-warning m-2" type="submit">Регистрация</button>
        </div>

    </form>
</main>

