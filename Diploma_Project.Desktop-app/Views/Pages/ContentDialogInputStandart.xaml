<ui:ContentDialog x:Class="Diploma_Project.Desktop_app.Views.Pages.ContentDialogInputStandart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diploma_Project.Desktop_app.Views.Pages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d"
      xmlns:vm="clr-namespace:Diploma_Project.Desktop_app.ViewModels"
      d:DataContext="{d:DesignInstance vm:ViewModelOperation}"            
      Title="contentDialogProduct"
      PrimaryButtonText="Сохранить"
      PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
      CloseButtonText="Отмена"
      CloseButtonClick="ContentDialog_CloseButtonClick"
      DefaultButton="Primary" Closed="ContentDialog_Closed">
    <StackPanel VerticalAlignment="Center">
        <ui:NumberBox ValueChanged="tbAmout_ValueChanged" x:Name="tbAmout" VerticalAlignment="Center" ui:ControlHelper.Header="Количество"></ui:NumberBox>
    </StackPanel>
    
</ui:ContentDialog>
